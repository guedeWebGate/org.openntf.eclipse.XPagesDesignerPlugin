<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.openntf.xdpe</groupId>
		<artifactId>org.openntf.xdpe.parent</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
  <artifactId>org.openntf.xdpe.assembly</artifactId>
  <packaging>pom</packaging>
  <name>XPages Designer Plugin 4 Eclipse Assembly Line</name>
  
  	<properties>
		<kit.parentDir>${project.basedir}/../</kit.parentDir>
		<kit.workingDir>${project.build.directory}</kit.workingDir>
		<kit.finalAssemblyFolder>${kit.workingDir}/kit</kit.finalAssemblyFolder>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>com.googlecode.maven-download-plugin</groupId>
				<artifactId>maven-download-plugin</artifactId>
				<version>1.1.0</version>
				<executions>
					<execution>
						<id>download-sources</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>wget</goal>
						</goals>
						<configuration>
							<url>${kit.sourceCodeUrl}${kit.sourceBranch}</url>
							<unpack>false</unpack>
							<skipCache>true</skipCache>
							<outputFileName>org.openntf.xdpe.sources.zip</outputFileName>
							<outputDirectory>${kit.workingDir}/sources/XDPE</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
			<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>removedownloadsAndResults</id>
						<phase>clean</phase>
						<configuration>
							<target>
								<delete dir="${kit.workingDir}/sources" />
								<delete dir="${kit.parentDir}/../${kit.result}"/>
							</target>
						</configuration>
						<goals><goal>run</goal></goals>
					</execution>
					<execution>
						<id>p2repoServer</id>
						<phase>package</phase>
						<configuration>
							<target>
								<unzip
									src="../org.openntf.eclipse.xdpe.publisher.p2/target/org.openntf.eclipse.xdpe.publisher.p2-${project.version}.zip"
									dest="${kit.finalAssemblyFolder}/server-p2-${p2.buildVersion}" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					<execution>
						<id>p2repoClient</id>
						<phase>package</phase>
						<configuration>
							<target>
								<unzip
									src="../org.openntf.eclipse.xpdesigner.p2/target/org.openntf.eclipse.xpdesigner.p2-${project.version}.zip"
									dest="${kit.finalAssemblyFolder}/client-p2-${p2.buildVersion}" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					<execution>
						<id>toDistribution</id>
						<phase>install</phase>
						<configuration>
							<target>
								<copy todir="${kit.parentDir}/../${kit.result}">
    								<fileset dir="${kit.finalAssemblyFolder}">
    								</fileset>
								</copy>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>					
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.4</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<descriptor>assembly.xml</descriptor>
							<finalName>org.openntf.xpde-${kit.buildVersion}</finalName>
							<appendAssemblyId>false</appendAssemblyId>
							<outputDirectory>${kit.finalAssemblyFolder}</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
